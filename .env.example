# Curriculum Curator Environment Variables
# Copy this file to .env and update with your values

# REQUIRED: Security
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production

# Database (default is SQLite, can change to PostgreSQL for production)
DATABASE_URL=sqlite:///./curriculum_curator.db

# Git Content Repository
CONTENT_REPO_PATH=./content

# LLM Configuration (optional - users can bring their own keys)
# Leave empty to allow users to configure their own keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEFAULT_LLM_MODEL=gpt-4

# Email Configuration (optional)
EMAIL_DEV_MODE=true
BREVO_API_KEY=
BREVO_FROM_EMAIL=noreply@your-domain.com
BREVO_FROM_NAME=Curriculum Curator

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOAD=true
DEBUG=false

# Testing
TESTING=false
DISABLE_RATE_LIMIT=false

# Export Tools Paths (usually auto-detected in Docker)
GIT_PATH=/usr/bin/git
QUARTO_PATH=/usr/local/bin/quarto
PANDOC_PATH=/usr/bin/pandoc